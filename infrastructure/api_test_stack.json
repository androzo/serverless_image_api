{
  "Outputs" : {
      "AccessKeyID" : {
      "Description" : "API Caller access key",
      "Value" : {"Ref":"RestAPICallerKey"}
      },
      "AccessKeySecret" : {
         "Description" : "API Caller secret key",
         "Value" : { "Fn::GetAtt":["RestAPICallerKey","SecretAccessKey"] }
      },
      "RESTAPIEndpoint" : {
         "Description" : "Save Image API endpoint",
         "Value" : { "Fn::Sub" : [ "https://${RESTAPI}.execute-api.${AWS::Region}.amazonaws.com/dev/", { "RESTAPI": {"Ref" : "RestAPI"}} ]}
      }
   },
  "Resources": {
   "RestAPICaller":{
      "Type":"AWS::IAM::User",
      "Properties":{
         "UserName":"api_caller"
      }
   },
   "RestAPICallerKey":{
      "Type" : "AWS::IAM::AccessKey",
      "DependsOn" : "RestAPICaller",
      "Properties" : {
          "Status" : "Active",
          "UserName" : "api_caller"
        }
    },
   "RestAPICallerManagedPolicy":{
      "Type":"AWS::IAM::ManagedPolicy",
      "DependsOn":[
         "RestAPI",
         "SaveImageAPIFunction",
         "ListImageAPIFunction",
         "RestAPICaller"
      ],
      "Properties":{
         "Description":"API Caller",
         "PolicyDocument":{
            "Version":"2012-10-17",
            "Statement":[
               {
                  "Sid":"RestAPICaller001",
                  "Effect":"Allow",
                  "Action":"execute-api:Invoke",
                  "Resource":{
                     "Fn::Join":[
                        "",
                        [
                           "arn:aws:execute-api:",
                           {
                              "Ref":"AWS::Region"
                           },
                           ":",
                           {
                              "Ref":"AWS::AccountId"
                           },
                           ":",
                           {
                              "Ref":"RestAPI"
                           },
                           "/*/POST/*"
                        ]
                     ]
                  }
               },
               {
                  "Sid":"RestAPICaller002",
                  "Effect":"Allow",
                  "Action":"lambda:InvokeFunction",
                  "Resource":{
                     "Fn::Join":[
                        "",
                        [
                           "arn:aws:lambda:",
                           {
                              "Ref":"AWS::Region"
                           },
                           ":",
                           {
                              "Ref":"AWS::AccountId"
                           },
                           ":function:",
                           {
                              "Ref":"SaveImageAPIFunction"
                           }
                        ]
                     ]
                  }
               },
               {
                  "Sid":"RestAPICaller003",
                  "Effect":"Allow",
                  "Action":"s3:GetObject",
                  "Resource":"arn:aws:s3:::api-test-2019-saved-images/*"
               },
               {
                  "Sid":"RestAPICaller004",
                  "Effect":"Allow",
                  "Action":"lambda:InvokeFunction",
                  "Resource":{
                     "Fn::Join":[
                        "",
                        [
                           "arn:aws:lambda:",
                           {
                              "Ref":"AWS::Region"
                           },
                           ":",
                           {
                              "Ref":"AWS::AccountId"
                           },
                           ":function:",
                           {
                              "Ref":"ListImageAPIFunction"
                           }
                        ]
                     ]
                  }
               }
            ]
         },
         "Users":[
            "api_caller"
         ],
         "ManagedPolicyName":"API_Caller_Policy"
      }
      },
      "S3Bucket": {
          "DependsOn":"IAMLambdaServiceRole",
          "Type": "AWS::S3::Bucket",
          "Properties": {
              "BucketName" : "api-test-2019-saved-images"
          }
      },
      "BucketPolicy": {
        "Type": "AWS::S3::BucketPolicy",
        "Properties": {
          "Bucket": "api-test-2019-saved-images",
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "s3:GetObject",
                  "s3:PutObject"
                ],
                "Resource": "arn:aws:s3:::api-test-2019-saved-images/*",
                "Condition": {},
                "Principal":{
                    "AWS":[
                      {
                          "Fn::Join":[
                            ":",
                            [
                                "arn:aws:iam:",
                                {
                                  "Ref":"AWS::AccountId"
                                },
                                "role/LambdaServiceRole"
                            ]
                          ]
                      }
                    ]
                }
              }
            ]
          }
        }
      },
      "IAMLambdaServiceRole": {
          "Type": "AWS::IAM::Role",
          "Properties": {
          "RoleName": "LambdaServiceRole",
               "AssumeRolePolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
                },
              "Action": "sts:AssumeRole"
            }
                ]
              },
              "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AmazonAPIGatewayPushToCloudWatchLogs"],
              "Policies": [{
                  "PolicyName": "LambdaServiceRolePolicy",
                  "PolicyDocument": {
                      "Version": "2012-10-17",
                      "Statement": [
                           {
                              "Action": ["s3:Get*","s3:List*","s3:Put*"],
                              "Resource": "*",
                              "Effect": "Allow"
                           },{
                              "Action": ["dynamodb:PutItem"],
                              "Resource": "*",
                              "Effect": "Allow"
                           }

                      ]
                  }
              }]
          }
      },
      "ListImagesLogGroup":{
         "Type":"AWS::Logs::LogGroup",
         "DependsOn":"ListImageAPIFunction",
         "Properties":{
            "LogGroupName":{
               "Fn::Join":[
                  "",
                  [
                     "/aws/lambda/",
                     {
                        "Ref":"ListImageAPIFunction"
                     }
                  ]
               ]
            }
         }
      },
     "SaveImageLogGroup":{
        "Type":"AWS::Logs::LogGroup",
        "DependsOn":"SaveImageAPIFunction",
        "Properties":{
           "LogGroupName":{
              "Fn::Join":[
                 "",
                 [
                    "/aws/lambda/",
                    {
                       "Ref":"SaveImageAPIFunction"
                    }
                 ]
              ]
           }
        }
     },
     "ListImageAPIFunction":{
        "Type":"AWS::Lambda::Function",
        "Properties":{
           "FunctionName":"list-images",
           "Description":"Function to Get Vehicle Image from S3 Bucket",
           "Handler":"list_image.lambda_handler",
           "Runtime":"python3.6",
           "Code":{              
              "S3Bucket":"api-test-2019-lambda-functions",
              "S3Key":"list_image.zip"
           },
           "MemorySize":1024,
           "Role":{
              "Fn::GetAtt":[
                 "IAMLambdaServiceRole",
                 "Arn"
              ]
           },
           "Timeout":60
        }
     },
     "SaveImageAPIFunction":{
        "Type":"AWS::Lambda::Function",
        "Properties":{
           "FunctionName":"save-image",
           "Description":"Function to Get Vehicle Image from S3 Bucket",
           "Handler":"save_image.lambda_handler",
           "Runtime":"python3.6",
           "Code":{              
              "S3Bucket":"api-test-2019-lambda-functions",
              "S3Key":"save_image.zip"
           },
           "MemorySize":1024,
           "Role":{
          "Fn::GetAtt":[
                "IAMLambdaServiceRole",
                "Arn"
            ]
          },
          "Timeout":60
        }
     },
     "IAMAPIServiceRole":{
        "Type":"AWS::IAM::Role",
        "Properties":{
           "RoleName":"LambdaAPIServiceRole",
           "AssumeRolePolicyDocument":{
              "Version":"2012-10-17",
              "Statement":[
                 {
                    "Sid":"",
                    "Effect":"Allow",
                    "Principal":{
                       "Service":"apigateway.amazonaws.com"
                    },
                    "Action":"sts:AssumeRole"
                 }
              ]
           },
           "ManagedPolicyArns":[
              "arn:aws:iam::aws:policy/service-role/AmazonAPIGatewayPushToCloudWatchLogs"
           ],
           "Policies":[
              {
                 "PolicyName":"API_Service_Role_Policy",
                 "PolicyDocument":{
                    "Version":"2012-10-17",
                    "Statement":[
                       {
                          "Action":"lambda:InvokeFunction",
                          "Resource":{
                             "Fn::GetAtt":[
                                "SaveImageAPIFunction",
                                "Arn"
                             ]
                          },
                          "Effect":"Allow"
                       },
                       {
                        "Action":"lambda:InvokeFunction",
                        "Resource":{
                           "Fn::GetAtt":[
                              "ListImageAPIFunction",
                              "Arn"
                           ]
                        },
                        "Effect":"Allow"
                     }
                    ]
                 }
              }
           ]
        }
     },
